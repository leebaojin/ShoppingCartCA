@model IEnumerable<ShoppingCartCA.Models.Product>

@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Gallery";
    List<Product> products = ViewBag.products;
}

<style>
    * {
  box-sizing: border-box;
}

/* Style the search field */
form.searchProductClass input[type=text] {
  padding: 10px;
  font-size: 17px;
  border: 1px solid grey;
  float: left;
  width: 80%;
  background: #f1f1f1;
}

/* Style the submit button */
form.searchProductClass button {
  float: left;
  width: 20%;
  padding: 10px;
  background: #2196F3;
  color: white;
  font-size: 17px;
  border: 1px solid grey;
  border-left: none; /* Prevent double borders */
  cursor: pointer;
}

form.searchProductClass button:hover {
  background: #0b7dda;
}

/* Clear floats */
form.searchProductClass::after {
  content: "";
  clear: both;
  display: table;
}
</style>

<h1>Gallery Page</h1>

<!-- Load icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<!-- The form -->
<form class="searchProductClass" action="action_page.php">
  <input type="text" placeholder="Search.." name="search">
  <button type="submit"><i class="fa fa-search"></i></button>
</form>  

<table width="100%" >
@{
    bool opened = false;
    int i;

    for (i = 0; i < products.Count; i++)
    {
        @* 3 images per row *@
        if (i % 3 == 0)
        {
            @* only close if we are inside one *@
            if (opened)
            {
                @:</tr>
            }

            @:</tr>
            opened = true;
        }

        Product product = products[i];

        @:<td width="300px" height="400px">
            <div class="w3-container">
                
                    <div class="w3-card-4" >
                        <img src="@product.Img" style = "width:100%; height: 250px" >
                        <div class="w3-container w3-center">
                        <h2>@product.Name</h2>
                            <p>@product.Desc</p>
                            <p>
                                <button type="submit" class="btn btn-primary" form="nameform" value="Submit">$@product.Price - Add To Cart</button>
                            </p>
                        </div>
                    </div>
            </div>
        @:</td>
    }

    if (products.Count > 0) 
    {
        @* padding if not enough images to form an entire row *@
        while (i % 3 != 0)
        {
            <td ></td>
            i++;
        }

        @* close off final row *@
        @:</tr>        
    }
}
</table>
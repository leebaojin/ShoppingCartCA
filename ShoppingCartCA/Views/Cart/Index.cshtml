@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Cart";
    Product cartitem = (Product)ViewData["cartdata"];
    List<CartDetail> allcartitem = (List<CartDetail>)ViewData["allcartitem"];
}
<h1>My Cart</h1>
<br>
<div>
    @if(allcartitem.Count == 0)
            {
@:<p>No Items In Cart</p>
            }
            else
            {
        <table class="carttable">
            
        </table>
            }
</div>

<div class="prod-holder-table">
    <div class="prod-holder-row">
        <div class="prod-col-img">
            <img class="prod-img"src="/pictures/dotnet_charts_00da522c-3653-491c-8749-7fd8e71ad728.jpg" />
        </div>
    </div>
    <div class="prod-holder-row">
        <div class="prod-col-title">
            .NET Charts
        </div>
    </div>
    <div class="prod-holder-row">
        <div class="prod-col-dec">
            Brings powerful charting capabilities to your .NET applications
        </div>
    </div>
    <div class="prod-holder-row">
        <div class="prod-col-btn">
            <input class="prod-button" type="button" action="/" value="$99 - Add to Cart" />
        </div>
    </div>
</div>
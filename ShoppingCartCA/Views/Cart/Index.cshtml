@using ShoppingCartCA.Views.Shared;
@{
    Layout = "_ShopLayout";
    ViewData["Title"] = "Cart";
    List<CartDetail> allcartitem = (List<CartDetail>)ViewData["allcartitem"];
}
<div class="cart-header">
    <table class="cart-table">
        <tr>
            <td class="cart-table-title">
                My Cart
            </td>
            <td class="cart-table-price">
                Price : $<span id="totalcost">99</span>
            </td>
        </tr>
    </table>
</div>
<br>
<div>
    @if (allcartitem.Count == 0)
    {
        @:<p>No Items In Cart</p>
    }
    else
    {
        <table class="carttable">
        </table>
    }
</div>

<div class="showcart">
    <table class="carttable">
        <tr>
            <td class="itemcell">@Html.Raw(ProductDisplay.DisplayItem(allcartitem[0].Product))</td>
            <td class="datacell">
                <div>Price : $<span id="price1" unitprice="99">99</span></div>
                <br />
                <div>
                    <input type="button" id="minus1" value="-" />
                    <input type="text" name="qty" id="qty1" onchange="UpdateCartItem(this)" style="width:30px" />
                    <input type="button" id="add1" value="+" />
                    <input type="hidden" id="cartno1" value="1" />
                </div>
            </td>
        </tr>
    </table>
</div>



<script type="text/javascript">
    function UpdateCartItem(elem) {
        //To search for cart item
        var ele = elem;
        ele.value = 10;
    }
    function SendCartItem(e) {

    }
</script>